{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./dist",
    "rootDir": "./dist",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "composite": true,
    "paths": {
      "shared/*": ["./shared/*"],
      "modules/*": ["./modules/*"]
    }
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
