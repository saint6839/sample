{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true, // Enable experimental support for decorators
    // Rules
    "noLib": false, // Do not generate lib files
    "noEmit": true, // Disable emitting of emitted files
    "strict": false, // Enable all strict type checking options
    "checkJs": true, // Enable error reporting in type-checked JavaScript files
    "allowJs": true, // Allow JavaScript files to be compiled
    "sourceMap": true, // Generate corrresponding .map file
    "incremental": true, // Enable incremental compilation by reading/writing information from prior compilations to a file on disk
    "declaration": true, // Generate corresponding .d.ts file
    "skipLibCheck": true, // Skip type checking of all declaration files
    "importHelpers": true, // Do not generate import helpers
    "noImplicitAny": false, // Report error on expressions and declarations with an implied any
    "removeComments": true, // Remove comments from generated code
    "noUnusedLocals": true, // Report errors on unused locals
    "isolatedModules": true, // Unconditionally emit imports for unresolved files
    "esModuleInterop": true, // Disables namespace imports (import * as fs from "fs") and enables CJS/AMD/UMD style imports (import fs from "fs")
    "strictNullChecks": true, // Enable strict null checks
    "noImplicitReturns": true, // Report error when not all code paths in function return a value
    "resolveJsonModule": true, // Include modules imported with .json extension
    "noUnusedParameters": true, // Report errors on unused parameters
    "noImplicitOverride": true, // Report errors when class properties are declared without explicit modifiers like public, private, or protected.
    "emitDecoratorMetadata": true, // Emit metadata for decorators
    "noFallthroughCasesInSwitch": true, // Report errors for fallthrough cases in switch statement
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
    "noPropertyAccessFromIndexSignature": true, // Enforces using indexed accessors for keys declared using an indexed type
    // Paths
    "baseUrl": ".", // Set the base directory for resolving non-relative module names
    "rootDir": "../..", // Set the root directory for resolving non-relative module names
    "paths": {
      "modules/*": ["./modules/*"],
      "shared/*": ["./shared/*"]
    }
  },

  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "nest-cli.json", "jest.config.ts"],
  "include": ["**/*.ts", "**/*.js"]
}
